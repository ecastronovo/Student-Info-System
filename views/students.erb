<div>
  <h1>Students Page</h1>

  <% if @students2.any? %>
  <table id="student_table">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Student ID</th>
    <th>Delete</th>
    <th>Edit</th>
  </tr>
    <% @students2.each do|student| %>
       <tr>
         <td><a href="/students/<%= student.id %>"><%= student.firstname %></a></td>
         <td><a href="/students/<%= student.id %>"><%= student.lastname %></a></td>
         <td><a href="/students/<%= student.id %>"><%= student.studentid %></a></td>
         <td><form action='/students/<%= student.id%>' method='post'>
              <input type="hidden" name="_method" value="DELETE">
              <input type="submit" value="Delete">
              </form>
         </td>
         <td><a href='/students/<%=student.id%>/edit'><button type="button" name="button">Edit</button></a></td>
    </tr>
    <% end %>
  <% else %>
    <p>There are no students in the system.</p>
  <% end %>

<p><a href="/students/new">Add A New Student</a></p>
</div>
